@using Microsoft.AspNetCore.Identity
@model IEnumerable<CorporateKnowledgeBase.Web.Models.ApplicationUser>
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "User Management";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
    <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary shadow-sm">
        <i class="fas fa-plus fa-sm text-white-50"></i> Create New User
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>Last Login</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <img src="@(user.ProfilePictureUrl ?? "/images/avatars/default-avatar.png")" class="rounded-circle me-2" width="40" height="40" alt="@user.FullName" />
                                    <div>
                                        <strong>@user.FullName</strong>
                                        <small class="d-block text-muted">@user.UserName</small>
                                    </div>
                                </div>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @{
                                    var roles = await UserManager.GetRolesAsync(user);
                                    foreach (var role in roles)
                                    {
                                        <span class="badge bg-secondary me-1">@role</span>
                                    }
                                }
                            </td>
                            <td>
                                @if (user.LastLoginDate.HasValue)
                                {
                                    @user.LastLoginDate.Value.ToLocalTime().ToString("g")
                                }
                                else
                                {
                                    <span class="text-muted">Never logged in</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="ManageRoles" asp-route-userId="@user.Id" class="btn btn-warning btn-sm">Manage Roles</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>