@model IEnumerable<CorporateKnowledgeBase.Web.Areas.Admin.Models.TagViewModel>

@{
    ViewData["Title"] = "Tag Management";
}

<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">@ViewData["Title"]</h1>
</div>

<p>Here you can manage all content tags. Editing a tag to an existing name will merge them. Deleting a tag will remove it from all associated content.</p>

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Tag Name</th>
                        <th class="text-center">Usage Count</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in Model)
                    {
                        <tr>
                            <td><span class="badge bg-secondary fs-6">@tag.Name</span></td>
                            <td class="text-center">@tag.UsageCount</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@tag.Id" class="btn btn-warning btn-sm">Edit</a>
                                <button type="button" class="btn btn-danger btn-sm delete-tag-button"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteTagModal"
                                        data-tag-id="@tag.Id"
                                        data-tag-name="@tag.Name">
                                    Delete
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="deleteTagModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Tag Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to permanently delete the tag "<strong id="tagNameInModal"></strong>"?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <form asp-action="Delete" method="post" id="deleteTagForm">
                    <input type="hidden" name="id" id="tagIdToDelete" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteModal = document.getElementById('deleteTagModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var tagId = button.getAttribute('data-tag-id');
                var tagName = button.getAttribute('data-tag-name');

                var modalBody = deleteModal.querySelector('#tagNameInModal');
                var hiddenInput = deleteModal.querySelector('#tagIdToDelete');

                modalBody.textContent = tagName;
                hiddenInput.value = tagId;
            });
        });
    </script>
}