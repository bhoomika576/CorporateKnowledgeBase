@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-1 text-danger fw-bold">Oops!</h1>
            <h2 class="h3 mb-3">Something went wrong.</h2>
            <p class="lead text-muted">
                An unexpected error occurred while processing your request. We are working to fix the problem.
                Please try again later or return to the home page.
            </p>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg mt-3">
                Go to Homepage
            </a>

            @if (Model.ShowRequestId)
            {
                <div class="alert alert-secondary mt-4 text-start">
                    <p class="mb-0">
                        <strong>Request ID:</strong> <code>@Model.RequestId</code>
                    </p>
                    <hr>
                    <small>This information is visible because you are in the <strong>Development</strong> environment. It should not be enabled in deployed applications.</small>
                </div>
            }
        </div>
    </div>
</div>