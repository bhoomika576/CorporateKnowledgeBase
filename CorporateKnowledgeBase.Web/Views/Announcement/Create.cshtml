@model CorporateKnowledgeBase.Web.Models.Announcement

@{
    ViewData["Title"] = "Create New Announcement";
}

<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="Title" class="form-label fw-bold">Announcement Title</label>
                        <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter the announcement title here" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Content" class="form-label fw-bold">Announcement Content</label>
                        <textarea id="Content" asp-for="Content" class="form-control" rows="15"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header fw-bold">Publish</div>
                <div class="card-body">
                    <p class="text-muted">Please review all fields before publishing your announcement.</p>
                </div>
                <div class="card-footer text-end">
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    <input type="submit" value="Publish" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("Partial/_ValidationScriptsPartial");
    }
    <link rel="stylesheet" href="https://unpkg.com/easymde/dist/easymde.min.css">
    <script src="https://unpkg.com/easymde/dist/easymde.min.js"></script>

    <script>
        const easyMDE = new EasyMDE({
            element: document.getElementById('Content'),
            spellChecker: false,
            placeholder: "Enter announcement content here...",
            height: 500
        });
    </script>
}