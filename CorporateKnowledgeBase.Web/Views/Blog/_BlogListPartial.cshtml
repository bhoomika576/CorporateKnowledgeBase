@model IEnumerable<CorporateKnowledgeBase.Web.Models.BlogPost>

<div class="row">
    @if (Model.Any())
    {
        @foreach (var item in Model)
        {
            var plainContent = System.Text.RegularExpressions.Regex.Replace(item.Content ?? "", "<.*?>", string.Empty);
            var snippet = plainContent.Substring(0, Math.Min(plainContent.Length, 150));

            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.Title</h5>
                        <p class="card-text text-muted small">
                            <span class="me-2"><i class="bi bi-person"></i> @(item.Author?.FullName ?? "Unknown")</span>
                            <span class="me-2"><i class="bi bi-calendar-event"></i> @item.CreatedDate.ToShortDateString()</span>
                            <span><i class="bi bi-tag"></i> @(item.Category?.Name ?? "Uncategorized")</span>
                        </p>
                        <p class="card-text flex-grow-1">
                            @snippet @(plainContent.Length > 150 ? "..." : "")
                        </p>

                        @if (item.Tags.Any())
                        {
                            <p class="card-text small mt-2">
                                <strong>Tags:</strong>
                                @foreach (var tag in item.Tags)
                                {
                                    <a asp-action="Index" asp-route-tag="@tag.Name" class="badge bg-secondary text-decoration-none me-1">@tag.Name</a>
                                }
                            </p>
                        }
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-primary align-self-start mt-auto">Read More</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="alert alert-info">No blog posts matching your search criteria were found.</div>
        </div>
    }
</div>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        @if (ViewBag.CurrentPageNumber > 1)
        {
            <li class="page-item">
                <a class="page-link" href="#" data-page="@(ViewBag.CurrentPageNumber - 1)">Previous</a>
            </li>
        }
        @for (int i = 1; i <= ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPageNumber ? "active" : "")">
                <a class="page-link" href="#" data-page="@i">@i</a>
            </li>
        }
        @if (ViewBag.CurrentPageNumber < ViewBag.TotalPages)
        {
            <li class="page-item">
                <a class="page-link" href="#" data-page="@(ViewBag.CurrentPageNumber + 1)">Next</a>
            </li>
        }
    </ul>
</nav>