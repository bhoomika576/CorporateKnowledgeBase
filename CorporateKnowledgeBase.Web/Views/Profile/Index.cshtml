@model CorporateKnowledgeBase.Web.Models.UserProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

@if (Model.User != null)
{
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <div class="row align-items-center">
                <div class="col-md-2 text-center">
                    <form asp-action="UpdateProfilePicture" method="post" enctype="multipart/form-data" id="profilePictureForm">
                        <input type="file" name="profilePicture" id="profilePictureInput" class="d-none" accept="image/*" onchange="document.getElementById('profilePictureForm').submit();">

                        <div class="profile-picture-container" onclick="document.getElementById('profilePictureInput').click();">
                            @{
                                var pictureUrl = Model.User.ProfilePictureUrl ?? "/images/avatars/default-avatar.png";
                            }
                            <img src="@pictureUrl" class="img-fluid rounded-circle profile-picture" alt="Profile Picture">
                            <div class="overlay rounded-circle">
                                <div class="text"><i class="bi bi-camera-fill"></i><br>Change</div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="col-md-6">
                    <h2 class="mb-0">@Model.User.FullName</h2>
                    <p class="text-muted">@Model.User.UserName</p>
                    <a asp-area="Identity" asp-page="/Account/Manage/Index" class="btn btn-sm btn-outline-primary">Edit Profile</a>
                </div>
                <div class="col-md-4">
                    <div class="mb-2">
                        <h4 class="mb-0">@ViewBag.TotalBlogPostsCount</h4>
                        <small class="text-muted">Blog Posts</small>
                    </div>
                    <div>
                        <h4 class="mb-0">@ViewBag.TotalDocumentsCount</h4>
                        <small class="text-muted">Technical Documents</small>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <ul class="nav nav-tabs" id="profileTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="blog-tab" data-bs-toggle="tab" data-bs-target="#blog-content" type="button" role="tab" aria-controls="blog-content" aria-selected="true">Blog Posts</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="docs-tab" data-bs-toggle="tab" data-bs-target="#docs-content" type="button" role="tab" aria-controls="docs-content" aria-selected="false">Technical Documents</button>
            </li>
        </ul>
        <div class="tab-content" id="profileTabContent">
            <div class="tab-pane fade show active" id="blog-content" role="tabpanel" aria-labelledby="blog-tab">
                <div class="list-group mt-3">
                    @if (Model.BlogPosts != null && Model.BlogPosts.Any())
                    {
                        @foreach (var blog in Model.BlogPosts)
                        {
                            <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@blog.Title</h5>
                                    <small>@blog.CreatedDate.ToShortDateString()</small>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">
                            <p class="mb-1">You have not created any blog posts yet.</p>
                        </div>
                    }
                </div>
                <nav aria-label="Blog posts navigation" class="mt-3">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalBlogPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentBlogPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-blogPage="@i" asp-route-docPage="@ViewBag.CurrentDocPage">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
            <div class="tab-pane fade" id="docs-content" role="tabpanel" aria-labelledby="docs-tab">
                <div class="list-group mt-3">
                    @if (Model.TechnicalDocuments != null && Model.TechnicalDocuments.Any())
                    {
                        @foreach (var doc in Model.TechnicalDocuments)
                        {
                            <a asp-controller="Document" asp-action="Details" asp-route-id="@doc.Id" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1">@doc.Title</h5>
                                    <small>@doc.CreatedDate.ToShortDateString()</small>
                                </div>
                            </a>
                        }
                    }
                    else
                    {
                        <div class="list-group-item">
                            <p class="mb-1">You have not created any technical documents yet.</p>
                        </div>
                    }
                </div>
                <nav aria-label="Technical documents navigation" class="mt-3">
                    <ul class="pagination">
                        @for (int i = 1; i <= ViewBag.TotalDocPages; i++)
                        {
                            <li class="page-item @(i == ViewBag.CurrentDocPage ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-docPage="@i" asp-route-blogPage="@ViewBag.CurrentBlogPage">@i</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
}